# Generic fallback credentials (used when no host-specific credentials resolve)
DISCOURSE_USERNAME=
DISCOURSE_PASSWORD=
DISCOURSE_API_KEY=
DISCOURSE_API_USERNAME=

# Optional host-mapped credentials file (defaults to ~/.config/termcourse/credentials.yml)
TERMCOURSE_CREDENTIALS_FILE=

# Secrets referenced by credentials.example.yml
TERMCOURSE_API_KEY_ACME=
TERMCOURSE_PASSWORD_META=

# Runtime toggles
TERMCOURSE_HTTP_DEBUG=0
TERMCOURSE_LINKS=1
TERMCOURSE_IMAGES=1
TERMCOURSE_IMAGE_BACKEND=auto
TERMCOURSE_CHAFA_MODE=stable
TERMCOURSE_IMAGE_LINES=14
TERMCOURSE_IMAGE_QUALITY_FILTER=1
TERMCOURSE_IMAGE_MAX_BYTES=5242880
TERMCOURSE_EMOJI=1
